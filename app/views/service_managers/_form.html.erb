<%= form_with(model: @service_manager, local: true) do |f| %> 
    <%= render 'shared/error_messages', object: f.object %>
    
    <%= f.hidden_field :service_id, value: @service.id %>

    <%= f.label :id %>
    <%= f.text_field :id, class: 'form-control', disabled: 'true' %>

    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
    
    <%= f.label :identify %>
    <% if controller.action_name == "edit" %>
        <%= f.text_field :identify, class: 'form-control', disabled: 'true' %>
    <% else %>
        <%= f.text_field :identify, class: 'form-control' %>
    <% end %>
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>

    <%= f.label :update_count %>
    <% if controller.action_name == "create" %>
        <%= f.text_field :update_count, class: 'form-control', disabled: 'true', value: "" %>
    <% else %>
        <%= f.text_field :update_count, class: 'form-control', disabled: 'true' %>
    <% end %>
    <%= f.label :created_at %>
    <%= f.text_field :created_at, class: 'form-control', disabled: 'true' %>

    <%= f.label :created_by %>
    <%= f.text_field :created_by, class: 'form-control', disabled: 'true' %>

    <%= f.label :updated_at %>
    <%= f.text_field :updated_at, class: 'form-control', disabled: 'true' %>

    <%= f.label :updated_by %>
    <%= f.text_field :updated_by, class: 'form-control', disabled: 'true' %>

    <%= f.submit "Update service manager", class: "btn btn-primary" %> 
<% end %>